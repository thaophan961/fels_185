<% provide :title, t("categories") %>
<h2><%= t "categories" %></h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @category, url: admin_categories_path do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :quantity_question %>
      <%= f.text_field :quantity_question, class: "form-control" %>

      <%= f.submit t("create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
