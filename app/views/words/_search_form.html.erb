<%= form_for words_path, method: :get, remote: true do |f| %>
  <div class="row center">
    <div class="col-md-8 col-md-offset-3">
      <%= t "category.categories" %>
      <%= select_tag "category_id",
        options_from_collection_for_select(@categories, "id", "title",
          params[:category_id]), include_blank: t("all"),
        class: "form-control form-small" %>
      <%= render "filter_form" %>
    </div>
  </div>
  <div class="center">
    <%= f.submit t("filter"), class: "btn btn-primary" %>
  </div>
<% end %>
