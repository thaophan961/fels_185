<% provide :title, @user.name %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= image_tag @user.avatar.url, class: "image" %>
      <h3>
        <%= t "helloname", name: @user.name %>
      </h3>
      <p>
        <%= t "learned" %>
        <%= @words.length %>
        <%= t "words" %>
      </p>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <div>
      <%= render "follow_form" if logged_in? %>
    </div>
  </aside>
  <aside class="col-md-8 panel panel-success feed_user">
    <div class="panel-heading">
      <h1 class="panel-title title_header"><%= t "activities" %></h1>
    </div>
    <div class="panel-body title_body">
      <%= render "shared/feed_activities" %>
    </div>
  </aside>
</div>
